            <th>
                @Html.DisplayNameFor(model => model.Email1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cell1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactName2)
            </th>
