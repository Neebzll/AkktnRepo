                @Html.DisplayFor(modelItem => item.Email1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cell1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactName2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cell2)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompanyID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompanyID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompanyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
