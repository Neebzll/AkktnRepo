@model AKKTN_Pr00.Models.CreateTask

@{
    ViewData["Title"] = "Create Task";
}

<style>
/*     .nav-link {
        display: none;
    } */

    .itemHide .nav-link.text-dark.signed {
        display: none;
    }
</style>

<h1>Add Task</h1>
<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Tasks" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Task ID (Optional for creation if auto-generated by the database) -->
@*            <div class="form-group visually-hidden">
                <label asp-for="TaskID" class="control-label"></label>
                <input asp-for="TaskID" readonly name="TaskID" class="form-control" value="213" />
                <span asp-validation-for="TaskID" class="text-danger"></span>
            </div *@
            <div class="form-group visually-hidden">
                <label asp-for="Tasks.CompanyID" class="control-label"></label>
                <input asp-for="Tasks.CompanyID" readonly name="CompanyID" class="form-control" value="@Context.Session.GetString("companyID")" />
                <span asp-validation-for="Tasks.CompanyID" class="text-danger"></span>
            </div> 

            <!-- Task Description -->
            <div class="form-group mt-3">
                <label asp-for="Tasks.TaskDescription" class="control-label">Task Description</label>
                <textarea asp-for="Tasks.TaskDescription" name="TaskDescription" class="form-control"></textarea>
                <span asp-validation-for="Tasks.TaskDescription" class="text-danger"></span>
            </div>

            <!-- Assigned Date -->
            <div class="form-group mt-3">
                <label asp-for="Tasks.AssignTaskDate" class="control-label">Task Assigment Date</label>
                <input asp-for="Tasks.AssignTaskDate" type="date" name="AssignTaskDate" class="form-control" />
                <span asp-validation-for="Tasks.AssignTaskDate" class="text-danger"></span>
            </div>

            <!-- Due Date -->
            <div class="form-group mt-3">
                <label asp-for="Tasks.DueDate" class="control-label">Task Due Date</label>
                <input asp-for="Tasks.DueDate" type="date" name="DueDate" class="form-control" />
                <span asp-validation-for="Tasks.DueDate" class="text-danger"></span>
            </div>

            <!-- Task Status -->
            <div class="form-group mt-3">
                <label asp-for="Tasks.TaskStatus" class="control-label">Task Status</label>
                <select asp-for="Tasks.TaskStatus" class="form-control" name="TaskStatus">
                    <option value="Pending">Pending</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
                <span asp-validation-for="Tasks.TaskStatus" class="text-danger"></span>
            </div>

            <!-- Reminders -->
            <div class="form-group mt-3">
                <label asp-for="Tasks.Reminders" class="control-label"></label>
                <select asp-for="Tasks.Reminders"  class="form-control" name="Reminders">
                  
                    <option value="Monthly">Every Month</option>
                    <option value="Weekly">Every Week</option>
                    <option value="2 days">Every 2 days</option>
                    <option value="2 weeks">Every 2 weeks</option>
                </select>
                <span asp-validation-for="Tasks.Reminders" class="text-danger"></span>
            </div>
            <div class="form-group card mt-3">
                <label class="card-header">Select Team Members</label>
                <div class="card-body">
                @foreach (var member in Model.TeamMembers)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="MembersID" value="@member.memberID" />
                        <label class="form-check-label">@member.ContactName</label>  <!-- Replace with the actual member name field -->
                    </div>
                }
                </div>
             @*    <span asp-validation-for="MembersID" class="text-danger"></span> *@
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
@*Pop up error message*@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@ViewBag.ErrorMessage'
                });
        </text>
    }
</script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

