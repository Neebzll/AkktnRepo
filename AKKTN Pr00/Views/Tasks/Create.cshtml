@model AKKTN_Pr00.Models.Tasks

@{
    ViewData["Title"] = "Create Task";
}

<style>
    .nav-link {
        display: none;
    }

    .itemHide .nav-link.text-dark.signed {
        display: none;
    }
</style>

<h1>Add Task</h1>
<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Tasks" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Task ID (Optional for creation if auto-generated by the database) -->
            <div class="form-group">
                <label asp-for="TaskID" class="control-label"></label>
                <input asp-for="TaskID" readonly name="TaskID" class="form-control" value="@ViewData["ID"]" />
                <span asp-validation-for="TaskID" class="text-danger"></span>
            </div>

            <!-- Task Description -->
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label"></label>
                <textarea asp-for="TaskDescription" name="TaskDescription" class="form-control"></textarea>
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>

            <!-- Assigned Date -->
            <div class="form-group">
                <label asp-for="AssignTaskDate" class="control-label"></label>
                <input asp-for="AssignTaskDate" type="date" name="AssignTaskDate" class="form-control" />
                <span asp-validation-for="AssignTaskDate" class="text-danger"></span>
            </div>

            <!-- Due Date -->
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" type="date" name="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>

            <!-- Task Status -->
            <div class="form-group">
                <label asp-for="TaskStatus" class="control-label"></label>
                <select asp-for="TaskStatus" class="form-control" name="TaskStatus">
                    <option value="">Select Status</option>
                    <option value="Pending">Pending</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>

            <!-- Reminders -->
            <div class="form-group">
                <label asp-for="Reminders" class="control-label"></label>
                <input asp-for="Reminders" name="Reminders" class="form-control" />
                <span asp-validation-for="Reminders" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

